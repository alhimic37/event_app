<div class="hero-unit">
<div class="page-header">
<div class="btn-group">
<%= link_to 'Edit', edit_user_path(@user), class: "btn" %> | 
<%= link_to 'Delete my profile', @user, class: "btn", method: :delete, data: { confirm: 'Are you sure?' } %>|
</div>
<h1>My profile</h1>
</div>

<%= render 'users/avatar' %>
 
<p>
  <strong>Name:</strong>
  <%= @user.name %>
</p>

<p>
  <strong>Email:</strong>
  <%= @user.email %>
</p>

<p>
  <strong>Birth date:</strong>
  <%= @user.birth_date %>
</p>




</div>