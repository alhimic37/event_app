
<div class="field">
    <%= fields.label :title %>
    <%= fields.text_field :title, :placeholder => 'Title' %>
</div>

<div class="field">
  <%= fields.label :description %>
  <%= fields.text_area(:description, :size => '3x3') %>
</div>

<div class='row'>
<div class="field span2">
  <%= fields.label :start_at %>
  <%= fields.datetime_field :start_at, class: 'localtime datepicker' %>
</div>


<div class="field span2">
    <%= fields.label :end_at %>
  <%= fields.datetime_field :end_at, class: 'localtime datepicker' %>
</div>
</div>
