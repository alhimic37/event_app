<h2>Event details</h2>
   <h5>Name:</h5>
   <p> <%= @event.title %></p>
   <p> <%= @event.description %></p>
   <h5>Start date:</h5>
   <p> <%= @event.start_at %></p>
   <h5>End date:</h5>
   <p> <%= @event.end_at.strftime("%d.%m.%Y, %H:%M") %></p>
      
   <%= link_to "Edit", edit_event_path(@event), class:"btn", remote: true %> 
   <%= link_to "Delete", @event,  :confirm => 'Are you sure you want to delete this event? This is an irreversible action.', class:"btn", method: :delete, remote: true %>


