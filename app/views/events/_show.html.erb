<div class="panel panel-primary">
  <div class="panel-heading">
    <h3 class="panel-title">Event</h3>
  </div>
  <div class="panel-body">
   <ul>Name:</ul>
   <ul><%= @event.name %></ul>
   <ul>Start date:</ul>
   <ul><%= @event.start_at %></ul>
      <ul>End date:</ul>
   <ul><%= @event.end_at %></ul>
   
   
   <%= link_to "Edit", edit_event_path(@event), class:"btn", remote: true %> 
   <%= link_to "Delete", @event,  :confirm => 'Are you sure you want to delete this event? This is an irreversible action.', class:"btn", method: :delete, remote: true %>
  </div>
</div>

