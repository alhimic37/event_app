<h2>Event details</h2>
   <h5>Name:</h5>
   <p> <%= @event.title %></p>
   <p> <%= @event.description %></p>
   <h5>Start date:</h5>
   <p>
     <%if @event.all_day %>
       <%=l @event.start_at, format: :allday %>
     <%else%>
       <%=l @event.start_at %>
     <%end%>
   </p>
   <h5>End date:</h5>
   <p>
     <%if @event.all_day %>
       <%=l @event.end_at, format: :allday %>
     <%else%>
       <%=l @event.end_at %>
     <%end%>
   </p>

   <%if current_user.id == @event.user_id %>   
     <%= link_to "Edit", edit_event_path(@event), class:"btn", remote: true %> 
     <%= link_to "Delete", @event,  data: {:confirm => 'Are you sure you want to delete this event? This is an irreversible action.'}, class:"btn", method: :delete, remote: true %>
  <%end%>


